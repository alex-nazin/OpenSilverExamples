<UserControl
    x:Class="MigrationExamples.OpenSilver.Pages.PropertyGridOptimize.PropertyGridNew"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel>
        <Border BorderBrush="#FF7c8d9c" BorderThickness="1" CornerRadius="3">
            <Grid>
                <StackPanel x:Name="LayoutRoot" Background="White" />
                <Grid x:Name="LayoutRootNonGrouped" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition MinWidth="100"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" x:Name="CaptionsContainer" />
                    <Border Grid.Column="1" VerticalAlignment="Stretch" Background="#A7B3BD" Width="3" />
                    <StackPanel Grid.Column="2" x:Name="ValuesContainer" />
                </Grid>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
